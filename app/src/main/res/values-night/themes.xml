<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pikul" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantDark</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/night_window_background</item>

        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@color/night_theme_text_color</item>
        <item name="android:windowBackground">@color/night_window_background</item>
        <item name="background">@color/night_secondary_background</item>
        <item name="backgroundColor">@color/night_third_background</item>


        <!--    For Selector    -->
        <item name="itemTextAppearanceInactive">@color/gray_tabs_title</item>
    </style>
    <style name="Pikul.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">?attr/background</item>
        <item name="android:height">0dp</item>
        <item name="shapeAppearance">@style/Pikul.Custom.Indicator.ShapeAppearance</item>
    </style>

    <style name="Pikul.Custom.Indicator.ShapeAppearance" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerSize">25%</item>
    </style>
</resources>